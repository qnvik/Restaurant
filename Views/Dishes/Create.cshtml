@model ContosoUniversity.Models.Dish

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Страви</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealID" class="control-label"></label>
                <select asp-for="MealID" class ="form-control" asp-items="ViewBag.MealID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantID" class="control-label"></label>
                <select asp-for="RestaurantID" class ="form-control" asp-items="ViewBag.RestaurantID"></select>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
