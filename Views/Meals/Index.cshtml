@model IEnumerable<ContosoUniversity.Models.Meal>

@{
    ViewData["Title"] = "Index";
}

<h1>Типи страв</h1>

<p>
    <a asp-action="Create">Створити нову</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Назва</a>
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MealID">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.MealID">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.MealID">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
